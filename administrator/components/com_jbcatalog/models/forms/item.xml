<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_jbcatalog/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" class="inputbox"
			size="40" label="COM_JBCATALOG_FIELD_ITEM_NAME_LABEL"
			description="COM_JBCATALOG_FIELD_ITEM_NAME_DESC" required="true" />

		<field name="alias" type="text" class="inputbox"
			size="40" label="JFIELD_ALIAS_LABEL"
			description="COM_JBCATALOG_FIELD_ITEM_ALIAS_DESC" />


		<field name="published" type="list"
			label="JSTATUS" description="COM_JBCATALOG_FIELD_ITEM_STATE_DESC"
			class="inputbox span12 small" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>

		</field>


		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_JBCATALOG_FIELD_ITEM_LANGUAGE_DESC" class="inputbox span12 small"
		>
			<option value="*">JALL</option>
		</field>


        <field name="descr" type="editor"
               label="COM_JBCATALOG_FIELD_ITEM_INFORMATION_MISC_LABEL"
               description="COM_JBCATALOG_FIELD_ITEM_INFORMATION_MISC_DESC"
               class="inputbox"
               filter="JComponentHelper::filterText"
               buttons="true"
               hide="readmore,pagebreak"
                />

        <field name="catid" type="catparent" extension="com_jbcatalog"
               label="COM_JBCATALOG_FIELD_PARENTCAT" description="COM_JBCATALOG_FIELD_PARENTCAT_DESC"
               class="inputbox" required="true" multiple="multiple"
               addfieldpath="/administrator/components/com_jbcatalog/models/fields"
               onchange="javascript:getItemAdfs();"
                />

	</fieldset>



</form>
